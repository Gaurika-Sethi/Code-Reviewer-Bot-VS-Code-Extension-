{
  "name": "code-reviewer-bot",
  "displayName": "Code Reviewer Bot",
  "description": "VS Code extension to review code using DeepSeek via Ollama",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.reviewWithDeepSeek",
        "title": "Review Code with DeepSeek"
      }
    ],
    "activationEvents": [
      "onCommand:extension.reviewWithDeepSeek"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
